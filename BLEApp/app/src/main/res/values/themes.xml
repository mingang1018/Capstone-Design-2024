<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.BLE_Permisison" parent= "Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">
            @color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">
            @color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>

        <!-- AppBar 색상 설정 -->
        <item name="colorPrimaryDark">@color/appBarColor</item>

        <!-- NavigationBar 색상 설정 -->
<!--        <item name="android:navigationBarColor">@color/navigationBarColor</item>-->
        <!-- Customize your theme here. -->
    </style>
    <style name="Theme.NavigationDrawer.AppBarOverlay"
        parent="ThemeOverlay.AppCompat.Dark.ActionBar" />
    <style name="Theme.NavigationDrawer.PopupOverlay"
        parent="ThemeOverlay.AppCompat.Light" />
    <style name="button_card" parent=
        "Widget.MaterialComponents.Button.OutlinedButton">
        <item name="strokeColor">@color/purple_700</item>
        <item name="strokeWidth">2dp</item>
        <item name="android:textColor">@color/black</item>
    </style>
    <style name="button_card_off" parent="Widget.MaterialComponents.Button.OutlinedButton">
        <item name="strokeColor">@color/purple_700</item>
        <item name="strokeWidth">2dp</item>
        <item name="android:backgroundTint">@color/grayAccent</item>
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="button_card_tab" parent=
        "Widget.MaterialComponents.Button.OutlinedButton">
        <item name="strokeColor">@color/purple_700</item>
        <item name="strokeWidth">4dp</item>
    </style>
    <style name="HorizontalProgressBarStyle" parent="Widget.AppCompat.ProgressBar.Horizontal">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">30dp</item>
        <item name="android:max">1000</item>
    </style>
    <style name="HorizontalProgressBarStyle_Tab" parent="Widget.AppCompat.ProgressBar.Horizontal">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">40dp</item>
        <item name="android:max">1000</item>
    </style>

</resources>