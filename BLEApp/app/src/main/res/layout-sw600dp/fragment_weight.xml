<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".WeightFragment">
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <!-- TODO: Update blank fragment layout -->
        <LinearLayout
            android:id="@+id/number_pad"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="10sp"
            android:orientation="vertical">

            <TextView
                android:id="@+id/number_data"
                android:layout_width="match_parent"
                android:layout_height="150dp"
                android:layout_gravity="end"
                android:gravity="bottom|right"
                android:paddingEnd="10sp"
                android:text="@string/number_text_gram"
                android:textSize="70sp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="400dp"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <Button
                            android:id="@+id/seven"
                            style="@style/button_card"
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:text="7"
                            android:textSize="20sp" />

                        <Button
                            android:id="@+id/eight"
                            style="@style/button_card"
                            android:layout_width="0dp"
                            android:layout_height="100sp"
                            android:layout_weight="1"
                            android:text="8"
                            android:textSize="20sp" />

                        <Button
                            android:id="@+id/nine"
                            style="@style/button_card"
                            android:layout_width="0dp"
                            android:layout_height="100sp"
                            android:layout_weight="1"
                            android:text="9"
                            android:textSize="20sp" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <Button
                            android:id="@+id/four"
                            style="@style/button_card"
                            android:layout_width="0dp"
                            android:layout_height="100sp"
                            android:layout_weight="1"
                            android:text="4"
                            android:textSize="20sp" />

                        <Button
                            android:id="@+id/five"
                            style="@style/button_card"
                            android:layout_width="0dp"
                            android:layout_height="100sp"
                            android:layout_weight="1"
                            android:text="5"
                            android:textSize="20sp" />

                        <Button
                            android:id="@+id/six"
                            style="@style/button_card"
                            android:layout_width="0dp"
                            android:layout_height="100sp"
                            android:layout_weight="1"
                            android:text="6"
                            android:textSize="20sp" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <Button
                            android:id="@+id/one"
                            style="@style/button_card"
                            android:layout_width="0dp"
                            android:layout_height="100sp"
                            android:layout_weight="1"
                            android:text="1"
                            android:textSize="20sp" />

                        <Button
                            android:id="@+id/two"
                            style="@style/button_card"
                            android:layout_width="0dp"
                            android:layout_height="100sp"
                            android:layout_weight="1"
                            android:text="2"
                            android:textSize="20sp" />

                        <Button
                            android:id="@+id/three"
                            style="@style/button_card"
                            android:layout_width="0dp"
                            android:layout_height="100sp"
                            android:layout_weight="1"
                            android:text="3"
                            android:textSize="20sp" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <Button
                            android:id="@+id/zero"
                            style="@style/button_card"
                            android:layout_width="0dp"
                            android:layout_height="100sp"
                            android:layout_weight="2"
                            android:text="0"
                            android:textSize="20sp" />

                        <ImageButton
                            android:id="@+id/stt_button"
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_marginTop="4dp"
                            android:layout_marginBottom="4dp"
                            android:layout_weight="1"
                            android:background="@drawable/image_button_background"
                            android:src="@drawable/mic" />
                    </LinearLayout>
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/sub"
                    android:layout_width="100sp"
                    android:layout_height="match_parent"
                    android:orientation="vertical">

                    <Button
                        android:id="@+id/Delete"
                        style="@style/button_card"
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="1"
                        android:text="@string/Delete_Button" />

                    <Button
                        android:id="@+id/Reset"
                        style="@style/button_card"
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="1"
                        android:text="@string/Reset_Button" />

                    <Button
                        android:id="@+id/enter"
                        style="@style/button_card"
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="2"
                        android:text="@string/Enter_Button" />
                </LinearLayout>
            </LinearLayout>

            <com.google.android.material.button.MaterialButton
                android:id="@+id/loop_button"
                style="@style/button_card_off"
                android:layout_width="match_parent"
                android:layout_height="100sp"
                android:layout_gravity="center_horizontal"
                android:drawableLeft="@drawable/loop"
                android:paddingStart="30dp"
                android:text="@string/loop_text"
                android:textSize="30sp" />
        </LinearLayout>
    </ScrollView>



</FrameLayout>